<h2>
  <%= link_to "Categories", root_path %> /
  <%= link_to @category.name, category_products_url  %> /
  <%= @product.name %>
</h2>

  <div class="row">
    <div class="col s3 m4 l3">
      <div class="card grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= @product.name %></span>
              <p>Description: <%= @product.description %>
              <p>Price: <%= number_to_currency(@product.price) %></p>
              <p>Sold by <%= @product.user ? @product.user.name : "Anonymous" %></p>
          </div>
            <div class="card-action">
              <a id="inline"><%= button_to order_items_path(product_id: @product) do %>
              <i class="small material-icons">add_shopping_cart</i>
              <% end %></a>
            <a id="inline"><% if product_author(@product) %>
            <%= link_to 'Edit', edit_category_product_url(@product.category_ids) %>
            <a id="inline"><%= link_to 'Delete', category_product_url(current_user, @product), method: :delete, data: { confirm: "Are you sure ?" } %></a>
             <% end %></a>
          </div>
      </div>
    </div>
  </div>