<!DOCTYPE html>
<html>
  <head>
    <title>Rails Shop</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
      <div class="navbar-fixed">
        <nav>
         <div id="nav" class="nav-wrapper green darken-1">
            <a href="/" class="brand-logo"> Rails Shop</a>
            <ul class="right">
            <% if user_signed_in? %>
              <li> <%= link_to cart_path(@cart) do %> 
              <i class="small material-icons">shopping_cart</i>
              <% end %></li>
              <li> <%= link_to 'My Products', user_products_url(current_user) %> </li>
              <li> <%= link_to 'Add Products', new_category_product_url(current_user) %> </li>
              <li> <%= link_to 'Edit Account', edit_user_registration_path %> </li>
              <li> <%= link_to "Log Out", destroy_user_session_path, method: :delete %> </li>

            <% else %>

            <li> <%= link_to "Log In", new_user_session_path %> </li>
            <li> <%= link_to "Sign up", new_user_registration_path %> </li>

            <% end %>

          </div>
        </nav>
      </div>
      
    <%= yield %>
  </body>
</html>
