<div class="row">
      <% @products.each do |product| %>

      <div class="col s3 m3 l3">
      <div class="card grey darken-1">
            <div class="card-content white-text">
            <span class="card-title"> <%= link_to product.name, user_product_url(current_user, product.id), class: "card-title"%> </span>
            <p>Sold by: <%= product.user ? product.user.name : "Anonymous" %></p>
            <p>Price: <%= number_to_currency(product.price) %></p>
            </div>
            <% if product_author(product) %>
            <div class="card-action">
            <a><%= link_to 'Edit', edit_user_product_url(product.user, product.id) %></a>
            <a><%= link_to 'Delete', user_product_url(current_user, product.id), method: :delete, data: { confirm: "Are you sure ?" } %></a>
            <% end %>
            </div>
            </div>
      </div>

      <% end %>
</div>